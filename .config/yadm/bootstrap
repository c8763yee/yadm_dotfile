#!/bin/bash
: <<COMMENT
This script is used to install the required packages for yadm bootstrap

Available distro: Arch, Debian, Fedora, Ubuntu
Package:
- yadm
- git
- curl
- zsh
- neovim
- wget
- tmux
- fastfetch

Plugin
- oh-my-zsh
- zsh-autosuggestions
- zsh-syntax-highlighting
- zsh-completions
- powerlevel10k
- lazyvim
- oh-my-tmux
COMMENT

PACKAGES=(
    "zsh"
    "git"
    "curl"
    "neovim"
    "wget"
    "tmux"
    "fastfetch"
)

function install_required_packages() {
    distro=$(cat /etc/os-release | grep -w "ID" | cut -d "=" -f 2 | tr -d '"')
    case $distro in
        "arch")
            sudo pacman -Syu --noconfirm
            sudo pacman -S --noconfirm ${PACKAGES[@]}
        ;;
        "debian" | "ubuntu")
            sudo apt update
            sudo apt install -y ${PACKAGES[@]}
        ;;
        "fedora")
            sudo dnf update -y
            sudo dnf install -y ${PACKAGES[@]}
        ;;
        *)
            echo "Unsupported distro"
            exit 1
        ;;
    esac
}


function install_oh_my_zsh() {
    sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh) --unattended --keep-zshrc"
    # reload zsh config
    source ~/.zshrc
    
    # check if oh-my-zsh is installed and `omz` is available
    if [ -d "$HOME/.oh-my-zsh" ] && [ -d "$HOME/.oh-my-zsh/custom" ] && [ $(which omz) ]; then
        echo "oh-my-zsh is installed"
    else
        echo "oh-my-zsh is not installed"
        exit 1
    fi
}
function install_zsh_autosuggestions() {
    git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
}

function install_zsh_syntax_highlighting() {
    git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting
}

function install_zsh_completions() {
    git clone https://github.com/zsh-users/zsh-completions ${ZSH_CUSTOM:-${ZSH:-~/.oh-my-zsh}/custom}/plugins/zsh-completions
}

function install_powerlevel10k() {
    git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k
    source ~/.zshrc
}

function install_plugin() {
    install_oh_my_zsh
    install_zsh_autosuggestions
    install_zsh_syntax_highlighting
    install_zsh_completions
    install_powerlevel10k
    install_lazyvim
}

function main(){
    install_required_packages
    # using zsh as default shell to install plugin
    zsh
    install_plugin
}